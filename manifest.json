{
  "manifest_version": 3,
  "name": "Job Copilot Browser Assistant",
  "version": "1.0.0",
  "description": "Smart, privacy-first browser extension to streamline job applications with AI-powered CV tailoring and autofill",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/view/*", "https://www.linkedin.com/jobs/collections/*"],
      "js": ["content.js"],
      "css": ["src/css/main.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Copilot"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}
