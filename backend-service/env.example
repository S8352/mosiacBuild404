# Backend Service Environment Configuration

# Application Settings
NODE_ENV=development
DEBUG=true
PORT=3000
HOST=localhost

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Database
DATABASE_URL=postgresql://jobcopilot:password@localhost:5432/job_copilot
REDIS_URL=redis://localhost:6379

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# CORS Settings
ALLOWED_ORIGINS=chrome-extension://*,http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=*

# File Processing
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# AI Processing
CV_PARSING_CONFIDENCE_THRESHOLD=0.8
JOB_FIT_ANALYSIS_ENABLED=true
DOCUMENT_GENERATION_ENABLED=true

# Service URLs
FRONTEND_URL=http://localhost:8080
API_BASE_URL=http://localhost:3000
