{
  "name": "job-copilot-extension",
  "version": "1.0.0",
  "description": "Job Copilot Chrome Extension Frontend",
  "main": "background.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.{js,css,html}",
    "package": "zip -r extension.zip . -x 'node_modules/*' '*.git*' '*.env*'"
