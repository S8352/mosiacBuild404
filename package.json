{
  "name": "job-copilot",
  "version": "1.0.0",
  "description": "Job Copilot - AI-powered job application assistant",
  "private": true,
  "workspaces": [
    "extension",
    "backend-service",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:extension && npm run install:backend",
    "install:extension": "cd extension && npm install",
    "install:backend": "cd backend-service && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:extension\"",
    "dev:backend": "cd backend-service && npm run dev",
    "dev:extension": "cd extension && npm run dev",
    "build": "npm run build:extension && npm run build:backend",
    "build:extension": "cd extension && npm run build",
    "build:backend": "cd backend-service && npm run build",
    "test": "npm run test:extension && npm run test:backend",
    "test:extension": "cd extension && npm test",
    "test:backend": "cd backend-service && npm test",
    "lint": "npm run lint:extension && npm run lint:backend",
    "lint:extension": "cd extension && npm run lint",
    "lint:backend": "cd backend-service && npm run lint",
    "docker:up": "cd deploy/docker && docker-compose up -d",
    "docker:down": "cd deploy/docker && docker-compose down",
    "docker:build": "cd deploy/docker && docker-compose build"
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  },
  "keywords": [
    "job-application",
    "ai",
    "chrome-extension",
    "automation"
  ],
  "author": "Job Copilot Team",
  "license": "MIT"
}
